<div class="container-fluid events-index-container">

<div class="container events-index">

    <h1 class="text-center" style="color: white;"> List of all future events </h1>


  
    
    <% for event in @events %>
    
    <div class="col-sm-6 col-md-6">

        <div class="panel panel-primary">

            <div class="panel-heading"><%= event.artist%> <%=event.event_date%> </div>
            <div class="panel-body">
                <%= event.description %>
            </div>
            <div class="panel-footer"><button type="button" class="btn btn-default"><%= link_to event.artist, "/events/#{event.id}" %></button></div>

        </div>
    </div>

    <% end %>

    <%= link_to 'Add new event', new_event_path %>

</div>

</div>